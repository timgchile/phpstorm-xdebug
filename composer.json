{
  "type": "project",
  "prefer-stable": true,
  "require": {
    "php": "^8.0",
    "jms/serializer-bundle": "^3.7",
    "php-pm/httpkernel-adapter": "^2.0",
    "php-pm/php-pm": "^2.2",
    "sensio/framework-extra-bundle": "^v6.1",
    "sentry/sentry-symfony": "^4.0",
    "symfony/console": "^5.3",
    "symfony/dotenv": "^5.3",
    "symfony/expression-language": "^5.3",
    "symfony/flex": "^1.9",
    "symfony/framework-bundle": "^5.3",
    "symfony/messenger": "^5.3",
    "symfony/monolog-bundle": "^3.3",
    "symfony/runtime": "^5.3",
    "symfony/security-bundle": "^5.3",
    "symfony/validator": "^5.3"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "process-timeout": 0
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Behat\\Behat\\": "features/bootstrap/"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "server:start": "./vendor/bin/ppm start --bootstrap=symfony --host=0.0.0.0 --port=80 --app-env=prod --workers=1 --debug=0 --logging=1",
    "server:start:dev": "./vendor/bin/ppm start --bootstrap=symfony --host=0.0.0.0 --port=80 --app-env=dev --workers=1 --max-execution-time=180 --debug=1 --logging=1 -vvv > ./var/log/php-pm.log &",
    "server:stop": "./vendor/bin/ppm stop",
    "server:restart": [
      "@server:stop",
      "@server:start"
    ],
    "server:restart:dev": [
      "@server:stop",
      "@server:start:dev"
    ],
    "test": "PHP_IDE_CONFIG=serverName=api XDEBUG_SESSION=1 curl -k https://api.me.com/healthcheck",
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "5.3.*"
    }
  }
}
